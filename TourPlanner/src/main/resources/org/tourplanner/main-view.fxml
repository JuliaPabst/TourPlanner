<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.tourplanner.view.MainController"
            stylesheets="@mainStyle.css">

  <top>
    <VBox>
      <!-- MenuBar -->
      <MenuBar fx:id="menuBar" styleClass="menu-bar">
        <Menu text="File">
          <MenuItem text="New Route"/>
          <MenuItem text="Open..."/>
          <MenuItem text="Save"/>
          <SeparatorMenuItem/>
          <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Edit">
          <MenuItem text="Undo"/>
          <MenuItem text="Redo"/>
        </Menu>
        <Menu text="Help">
          <MenuItem text="About"/>
        </Menu>
      </MenuBar>

      <!-- SearchBar -->
      <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-bar">
        <TextField fx:id="searchField" promptText="Search for a location or route..." HBox.hgrow="ALWAYS"
                   styleClass="search-field"/>
        <Button text="Search" onAction="#onSearch" styleClass="action-button"/>
      </HBox>
    </VBox>
  </top>

  <center>
    <VBox spacing="10">
      <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
      </padding>
      <fx:include source="route-input.fxml"/>
      <ListView fx:id="routeList"/>
      <Button onAction="#onExitButtonClick" text="E_xit" minWidth="64"/>
    </VBox>
  </center>

</BorderPane>

