<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.tourplanner.view.TourInputController"
          hgap="10" vgap="5">
    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
    </columnConstraints>

    <Label text="Tour Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-white"/>
    <TextField fx:id="newTourNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Distance (km):" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-white"/>
    <TextField fx:id="newTourDistanceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Add Tour" fx:id="addTourButton" onAction="#onAddButtonClick"
            GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.halignment="RIGHT" styleClass="action-button"/>
</GridPane>